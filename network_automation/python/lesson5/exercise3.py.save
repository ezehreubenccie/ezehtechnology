#!/usr/bin/env python

import re
def mac_norm(mac_address):
    mo = re.search(r'\w\w:\w\w:\w\w:\w\w', mac_address)
    mo2 = re.search(r'\w\w\w\w.\w\w\w\w.\w\w\w\w', mac_address)
    if mo:
        print('Mac address is already normalized.')    
        return
    elif mo2:
        print('Normalizing mac address now')
        for mac_addr in mac_address:
            mac_addr = mac_addr.split('.')
            mac_addr = ''.join(mac_addr)
            mac_addr = mac_addr.upper()

            mac_addr_strd = []
            while len(mac_addr) > 0:
            entry = mac_addr[:2]
            mac_addr = mac_addr[2:]
            mac_addr_strd.append(entry)

            mac_addr_strd = ':'.join(mac_addr_strd)
#            pprint(mac_addr_strd)
    else:
        print('Enter a mac address as function argument.')
        return
    return mac_addr_strd

mac_address = mac_norm('0a67.4534.78b0')
print(mac_address)


